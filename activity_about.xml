<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pink_primary">
    <!-- android:padding="16dp"-->

    <!-- Toolbar (Title Bar) -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink_light"
        android:titleTextColor="@color/white"
        android:title="Zakat Calculator"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:elevation="4dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>
       <!-- android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:logo="@drawable/profile" /> --> <!-- Add profile icon here -->

    <!-- Profile Information Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:backgroundTint="@color/pink_light"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="Profile Image"
                app:srcCompat="@drawable/riss" />

            <!-- Name Text -->
            <TextView
                android:id="@+id/about_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="Name: Arissa Natiera Binti Rusuhaidi"
                android:textColor="@color/pink_primary"
                android:textSize="18sp" />

            <!-- Student Number Text -->
            <TextView
                android:id="@+id/about_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="Student Number: 2022269816"
                android:textColor="@color/pink_primary"
                android:textSize="18sp" />

            <!-- Programme Name Text -->
            <TextView
                android:id="@+id/about_programme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="Programme Name: Bachelor Of Information Technology (Hons.)"
                android:textColor="@color/pink_primary"
                android:textSize="18sp" />

            <!-- Group Text -->
            <TextView
                android:id="@+id/about_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="Group: D1CDCS240/5A"
                android:textColor="@color/pink_primary"
                android:textSize="18sp" />

            <!-- GitHub Repository Link -->
            <TextView
                android:id="@+id/github_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="https://github.com/arissanatiera"
                android:textColor="@color/link_blue"
                android:textSize="16sp"
                android:autoLink="web"
                android:linksClickable="true" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Footer Text -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Â©2024 ARISSA NATIERA. All rights reserved."
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:padding="8dp" />
</LinearLayout>



