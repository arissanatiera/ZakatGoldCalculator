<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pink_primary">
   <!-- android:padding="16dp"> -->

    <!-- Toolbar (Title Bar) -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink_light"
        android:titleTextColor="@color/white"
        android:title="Zakat Calculator"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:elevation="4dp"/>
    <!--android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:logo="@drawable/profile" /> --> <!-- Profile Icon -->

    <!-- Instructions Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:backgroundTint="@color/pink_light"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="@android:color/white"> <!-- White background for instructions -->

            <!-- Instructions Title -->
            <TextView
                android:id="@+id/instructions_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="How to Use the Zakat Calculator"
                android:textColor="@color/pink_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Instructions Text -->
            <TextView
                android:id="@+id/instructions_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/zakat_instructions"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Footer Text -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Â©2024 ARISSA NATIERA. All rights reserved."
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:padding="8dp" />

</LinearLayout>
